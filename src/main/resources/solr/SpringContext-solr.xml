  <solr:solr-client id="solrClient" url="http://localhost:8983/solr/gettingstarted" />
  
  
  <bean id="solrTemplate" class="org.springframework.data.solr.core.SolrTemplate" scope="singleton">
    <constructor-arg ref="solrClient" />
